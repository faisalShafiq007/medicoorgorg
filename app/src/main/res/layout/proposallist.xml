<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:layout_margin="10dp"
        android:id="@+id/proposallistroot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/proposallistaccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:drawableRight="@drawable/accept"
            android:padding="10dp"
            android:text="accept   "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/proposallistcircleimageview"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/proposallistreject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/border"
            android:drawableRight="@drawable/reject"
            android:padding="10dp"
            android:text="Reject   "
            app:layout_constraintBottom_toBottomOf="@+id/proposallistaccept"
            app:layout_constraintStart_toEndOf="@+id/proposallistaccept"
            app:layout_constraintTop_toTopOf="@+id/proposallistaccept"
            app:layout_constraintVertical_bias="0.0" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/proposallistcircleimageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/proposallistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            android:text="Doctor faisal"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="@+id/proposallistcircleimageview"
            app:layout_constraintStart_toEndOf="@+id/proposallistcircleimageview"
            app:layout_constraintTop_toTopOf="@+id/proposallistcircleimageview"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/proposallistnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            android:text="Child Specialist"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            app:layout_constraintEnd_toEndOf="@+id/proposallistname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/proposallistname"
            app:layout_constraintTop_toBottomOf="@+id/proposallistname" />





    </androidx.constraintlayout.widget.ConstraintLayout
        >

</androidx.constraintlayout.widget.ConstraintLayout>