<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#d3D3D3"
    android:layout_height="match_parent"
    tools:context=".patientappointmentdirectory.doctor_profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="25dp"
        android:background="@drawable/profileback"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_profile_pic"
            android:layout_width="99dp"
            android:layout_height="109dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/man"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.079"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="155dp"
            android:layout_height="35dp"

            android:inputType="text"
            android:paddingTop="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/my_profile_pic"
            app:layout_constraintStart_toEndOf="@+id/my_profile_pic"
            app:layout_constraintTop_toTopOf="@+id/my_profile_pic"
            app:layout_constraintVertical_bias="0.283" />

        <TextView
            android:id="@+id/hospitalname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="36dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="Hospital"
            android:textColor="@color/main_color"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/my_profile_pic"
            tools:layout_editor_absoluteX="0dp" />

        <TextView

            android:id="@+id/numberp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="Number"
            android:textColor="@color/main_color"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/hospitalname" />

        <TextView
            android:id="@+id/profilespecialization"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="Specialized"
android:layout_marginLeft="15dp"
            android:textColor="@color/main_color"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/numberp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/doctorprofilebtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/main_color"
        android:text="Make an Appointment"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
