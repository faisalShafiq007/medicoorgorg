<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
android:id="@+id/liist_root"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/doctorlistimageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            app:layout_constraintBottom_toBottomOf="@+id/doctorlisthospitalname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/doctorlistname"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/doctorlistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            android:layout_marginTop="16dp"
            android:text="Doctor faisal"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            app:layout_constraintStart_toEndOf="@+id/doctorlistimageview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doctorlistspeacialist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            android:text="Child Specialist"
            android:textAlignment="center"
            android:textColor="@color/main_color"

            app:layout_constraintEnd_toEndOf="@+id/doctorlistname"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/doctorlistname"
            app:layout_constraintTop_toBottomOf="@+id/doctorlistname" />

        <TextView
            android:id="@+id/doctorlisthospitalname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Ganga Ram"
            android:textAlignment="center"
            android:textColor="@color/main_color"
            android:scrollingCache="false"
            android:smoothScrollbar="true"
            app:layout_constraintEnd_toEndOf="@+id/doctorlistspeacialist"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/doctorlistspeacialist"
            app:layout_constraintTop_toBottomOf="@+id/doctorlistspeacialist" />



       <ImageView
            android:id="@+id/doctorlistbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"

            android:scrollingCache="false"
            android:smoothScrollbar="true"
           android:background="@drawable/button"
            app:layout_constraintBottom_toBottomOf="@+id/doctorlisthospitalname"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/doctorlistname"
            app:layout_constraintVertical_bias="0.55" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


