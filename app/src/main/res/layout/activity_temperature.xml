<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".temperature">

    <LinearLayout
        android:id="@+id/sss"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aaa"
            android:background="@drawable/snowback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orinaltoday"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="68dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tday"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/orinaltoday"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/orinaltoday"
                app:layout_constraintTop_toBottomOf="@+id/orinaltoday" />

            <TextView
                android:id="@+id/citynotintent"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="@+id/tday"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tday"
                app:layout_constraintTop_toBottomOf="@+id/tday" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/main_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="16dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="Tomorrow"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/c"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginTop="4dp"

                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="1stday"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/b" />

            <TextView
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:padding="5dp"
                android:paddingTop="10dp"

                android:text="2stday"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/c" />


            <TextView
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="3rdday"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/d" />

            <TextView
                android:id="@+id/tomorrowtemp"
                android:layout_width="70dp"
                android:layout_height="50dp"

                android:layout_marginStart="144dp"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="20dp"
                android:paddingTop="10dp"
                android:text="C"

                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/b"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/daytomorrowtemp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:text="C"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/tomorrowtemp"
                app:layout_constraintStart_toStartOf="@+id/tomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/tomorrowtemp" />

            <TextView
                android:id="@+id/sectomorrowtemp"
                android:layout_width="70dp"
                android:layout_height="50dp"

                android:paddingTop="10dp"
                android:text="C"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/daytomorrowtemp"
                app:layout_constraintStart_toStartOf="@+id/daytomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/daytomorrowtemp" />

            <TextView
                android:id="@+id/thirdtomorrowtemp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:text="C"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="@+id/sectomorrowtemp"
                app:layout_constraintStart_toStartOf="@+id/sectomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/sectomorrowtemp" />

            <TextView
                android:id="@+id/fourtomorrowtemp"
                android:layout_width="100dp"
                android:layout_height="46dp"
                android:background="@drawable/border"
                android:paddingTop="10dp"
                android:text="C"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4th day"
                android:textColor="#000"
                android:textSize="25dp"
                android:visibility="gone"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="564dp" />
            //

            <ImageView
                android:id="@+id/tomorrowimage"
                android:layout_width="70dp"
                android:paddingBottom="15dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/cloudy"
                app:layout_constraintStart_toEndOf="@+id/tomorrowtemp"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/firstdayimage"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:paddingBottom="15dp"
                android:src="@drawable/haze"
                app:layout_constraintStart_toEndOf="@+id/daytomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/tomorrowimage" />

            <ImageView
                android:id="@+id/thirddayimage"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:paddingBottom="15dp"
                android:src="@drawable/smoke"
                app:layout_constraintEnd_toEndOf="@+id/seconddayimage"
                app:layout_constraintStart_toEndOf="@+id/sectomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/seconddayimage" />

            <ImageView
                android:id="@+id/seconddayimage"
                android:layout_width="70dp"
                android:paddingBottom="15dp"
                android:layout_height="50dp"
                android:src="@drawable/clear"
                app:layout_constraintStart_toEndOf="@+id/sectomorrowtemp"
                app:layout_constraintTop_toBottomOf="@+id/firstdayimage" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>